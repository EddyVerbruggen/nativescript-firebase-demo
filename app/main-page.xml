<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <TabView>
    <TabView.items>
      <TabViewItem title="About">
        <TabViewItem.view>
          <ScrollView>
            <StackLayout cssClass="tab-content">
              <Image margin="10" src="~/res/telerik-logo.png" />
              <Label text="Firebase plugin demo" cssClass="title"/>
              <Label text="Create awesome realtime apps with Firebase. Make sure you provide your own Firebase URL in main-view-model.js or expect unexpected things to happen :)" textWrap="true"/>
            </StackLayout>
          </ScrollView>
        </TabViewItem.view>
      </TabViewItem>
      <TabViewItem title="Demo">
        <TabViewItem.view>
          <ScrollView>
            <GridLayout columns="*, *" rows="auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto" horizontalAlignment="center" cssClass="tab-content">

              <Button row="0" col="0" text="init (do first)" tap="{{ doInit }}" />
              <Button row="0" col="1" text="login /w Fb" tap="{{ doLoginAnonymously }}" />

              <Label row="1" colSpan="2" text="methods on path /users" cssClass="subtitle" />

              <Button row="2" col="0" text="add child listener" tap="{{ doAddChildEventListenerForUsers }}" />
              <Button row="2" col="1"  text="store by push" tap="{{ doUserStoreByPush }}" />

              <Button row="3" colSpan="2" text="remove /users" tap="{{ doRemoveUsers }}" />

              <Label row="4" colSpan="2" text="methods on path /companies" cssClass="subtitle"/>

              <Button row="5" col="0" text="add value listener" tap="{{ doAddValueEventListenerForCompanies }}" />
              <Button row="5" col="1" text="store by setValue" tap="{{ doStoreCompaniesBySetValue }}" />

              <Button row="6" colSpan="2" text="remove /companies" tap="{{ doRemoveCompanies }}" />

              <Label row="7" col="0" text="Last update path:" cssClass="message"/>
              <Label row="7" col="1" text="{{ path }}" cssClass="message" textWrap="true" />

              <Label row="8" col="0" text="Type:" cssClass="message" />
              <Label row="8" col="1" text="{{ type }}" cssClass="message"/>

              <Label row="9" col="0" text="Key:" cssClass="message" />
              <Label row="9" col="1" text="{{ key }}" cssClass="message" textWrap="true" />

              <Label row="10" col="0" text="Value:" cssClass="message" />
              <Label row="10" col="1" text="{{ value }}" cssClass="message" textWrap="true" />

            </GridLayout>

          </ScrollView>
        </TabViewItem.view>
      </TabViewItem>
    </TabView.items>
  </TabView>
</Page>