<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <TabView>
    <TabView.items>
      <TabViewItem title="About">
        <TabViewItem.view>
          <ScrollView>
            <StackLayout cssClass="tab-content">
              <Image margin="10" src="~/res/telerik-logo.png" />
              <Label text="Firebase plugin demo" cssClass="title"/>
              <Label text="Create awesome realtime apps with Firebase. Make sure you provide your own Firebase URL in main-view-model.js or expect unexpected things to happen :)" textWrap="true"/>
            </StackLayout>
          </ScrollView>
        </TabViewItem.view>
      </TabViewItem>
      <TabViewItem title="Demo">
        <TabViewItem.view>
          <ScrollView>
            <GridLayout columns="*, *" rows="auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto" horizontalAlignment="stretch" cssClass="tab-content">

              <Button row="0" colSpan="2" text="init firebase - do this first" tap="{{ doInit }}" cssClass="button-positive" />

              <Label row="1" colSpan="2" text="Authentication" cssClass="subtitle" />

              <Button row="2" col="0" text="anonymous login" tap="{{ doLoginAnonymously }}" />
              <Button row="2" col="1" text="passwd login" tap="{{ doLoginByPassword }}" />

              <Button row="3" col="0" text="create pwd user" tap="{{ doCreateUser }}" />
              <Button row="3" col="1" text="logout" tap="{{ doLogout }}" />

              <Label row="4" colSpan="2" text="Methods on path /users" cssClass="subtitle" />

              <Button row="5" col="0" text="add childlistener" tap="{{ doAddChildEventListenerForUsers }}" cssClass="button-user" />
              <Button row="5" col="1"  text="store by push" tap="{{ doUserStoreByPush }}" cssClass="button-user" />

              <Button row="6" col="0" text="query users" tap="{{ doQueryUsers }}" cssClass="button-user" />
              <Button row="6" col="1" text="remove path" tap="{{ doRemoveUsers }}" cssClass="button-user" />

              <Label row="7" colSpan="2" text="Methods on path /companies" cssClass="subtitle"/>

              <Button row="8" col="0" text="add valuelistener" tap="{{ doAddValueEventListenerForCompanies }}" cssClass="button-company" />
              <Button row="8" col="1" text="store by setValue" tap="{{ doStoreCompaniesBySetValue }}" cssClass="button-company" />

              <Button row="9" col="0" text="query 'Bulgaria'" tap="{{ doQueryBulgarianCompanies }}" cssClass="button-company" />
              <Button row="9" col="1" text="remove path" tap="{{ doRemoveCompanies }}" cssClass="button-company" />

              <Label row="10" col="0" text="Last update path:" cssClass="message"/>
              <Label row="10" col="1" text="{{ path }}" cssClass="message" textWrap="true" />

              <Label row="11" col="0" text="Type:" cssClass="message" />
              <Label row="11" col="1" text="{{ type }}" cssClass="message"/>

              <Label row="12" col="0" text="Key:" cssClass="message" />
              <Label row="12" col="1" text="{{ key }}" cssClass="message" textWrap="true" />

              <Label row="13" col="0" text="Value:" cssClass="message" />
              <Label row="13" col="1" text="{{ value }}" cssClass="message" textWrap="true" />

            </GridLayout>

          </ScrollView>
        </TabViewItem.view>
      </TabViewItem>
    </TabView.items>
  </TabView>
</Page>